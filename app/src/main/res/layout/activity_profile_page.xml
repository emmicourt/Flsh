<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="emmyb.flush.ProfilePage">

    <TextView
        android:id="@+id/RestroomRating"
        android:layout_width="198dp"
        android:layout_height="39dp"
        android:layout_marginBottom="77dp"
        android:layout_marginTop="50dp"
        android:text="Restroom Rating"
        android:textSize="25sp"
        app:layout_constraintBottom_toTopOf="@+id/OverallRating"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/AddRating"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="50dp"
        android:layout_marginTop="51dp"
        android:text="Submit"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/UserRating" />

    <RatingBar
        android:id="@+id/UserRating"
        android:layout_width="240dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="51dp"
        android:layout_marginTop="65dp"
        android:numStars="5"
        app:layout_constraintBottom_toTopOf="@+id/AddRating"
        app:layout_constraintHorizontal_bias="0.499"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />

    <RatingBar
        android:id="@+id/OverallRating"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="117dp"
        android:layout_marginTop="77dp"
        android:isIndicator="true"
        android:numStars="5"
        android:stepSize=".5"
        app:layout_constraintBottom_toTopOf="@+id/textView2"
        app:layout_constraintHorizontal_bias="0.499"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/RestroomRating" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="193dp"
        android:layout_height="45dp"
        android:layout_marginBottom="65dp"
        android:layout_marginTop="67dp"
        android:text="Add Your Rating"
        android:textSize="25sp"
        app:layout_constraintBottom_toTopOf="@+id/UserRating"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/OverallRating" />

</android.support.constraint.ConstraintLayout>
